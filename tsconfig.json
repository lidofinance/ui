{
  "compilerOptions": {
    "pretty": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictFunctionTypes": false,
    "baseUrl": ".",
    "paths": {
      "@lidofinance/accordion": ["packages/accordion"],
      "@lidofinance/address": ["packages/address"],
      "@lidofinance/block": ["packages/block"],
      "@lidofinance/box": ["packages/box"],
      "@lidofinance/button": ["packages/button"],
      "@lidofinance/checkbox": ["packages/checkbox"],
      "@lidofinance/chip": ["packages/chip"],
      "@lidofinance/container": ["packages/container"],
      "@lidofinance/data-table": ["packages/data-table"],
      "@lidofinance/divider": ["packages/divider"],
      "@lidofinance/heading": ["packages/heading"],
      "@lidofinance/hooks": ["packages/hooks"],
      "@lidofinance/icons": ["packages/icons"],
      "@lidofinance/identicon": ["packages/identicon"],
      "@lidofinance/input": ["packages/input"],
      "@lidofinance/lido-logo": ["packages/lido-logo"],
      "@lidofinance/link": ["packages/link"],
      "@lidofinance/loaders": ["packages/loaders"],
      "@lidofinance/main-menu": ["packages/main-menu"],
      "@lidofinance/modal": ["packages/modal"],
      "@lidofinance/pagination": ["packages/pagination"],
      "@lidofinance/popover": ["packages/popover"],
      "@lidofinance/popup-menu": ["packages/popup-menu"],
      "@lidofinance/select": ["packages/select"],
      "@lidofinance/service-page": ["packages/service-page"],
      "@lidofinance/stack": ["packages/stack"],
      "@lidofinance/styled-system": ["packages/styled-system"],
      "@lidofinance/table": ["packages/table"],
      "@lidofinance/text": ["packages/text"],
      "@lidofinance/theme": ["packages/theme"],
      "@lidofinance/toast": ["packages/toast"],
      "@lidofinance/tooltip": ["packages/tooltip"],
      "@lidofinance/transition": ["packages/transition"],
      "@lidofinance/utils": ["packages/utils"],
      "@lidofinance/cookie-theme-toggler": ["packages/cookie-theme-toggler"],
      "@lidofinance/content-theme": ["packages/content-theme"],
      "@lidofinance/cookies-tooltip": ["packages/cookies-tooltip"]
    }
  },
  "files": ["packages/index.ts"],
  "include": [
    "packages/**/*.test.tsx",
    "packages/**/*.stories.tsx",
  ],
  "exclude": ["node_modules"]
}
