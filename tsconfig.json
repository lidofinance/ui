{
  "compilerOptions": {
    "pretty": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictFunctionTypes": false,
    "baseUrl": ".",
    "paths": {
      "@lidofinance/accordion": ["packages/accordion"],
      "@lidofinance/address": ["packages/address"],
      "@lidofinance/block": ["packages/block"],
      "@lidofinance/box": ["packages/box"],
      "@lidofinance/button": ["packages/button/src"],
      "@lidofinance/checkbox": ["packages/checkbox/src"],
      "@lidofinance/chip": ["packages/chip/src"],
      "@lidofinance/container": ["packages/container/src"],
      "@lidofinance/data-table": ["packages/data-table/src"],
      "@lidofinance/divider": ["packages/divider/src"],
      "@lidofinance/heading": ["packages/heading/src/"],
      "@lidofinance/hooks": ["packages/hooks/src"],
      "@lidofinance/icons": ["packages/icons/src/"],
      "@lidofinance/identicon": ["packages/identicon/src"],
      "@lidofinance/input": ["packages/input/src"],
      "@lidofinance/lido-logo": ["packages/lido-logo/src"],
      "@lidofinance/link": ["packages/link/src"],
      "@lidofinance/loaders": ["packages/loaders/src"],
      "@lidofinance/main-menu": ["packages/main-menu/src"],
      "@lidofinance/modal": ["packages/modal/src"],
      "@lidofinance/pagination": ["packages/pagination/src"],
      "@lidofinance/popover": ["packages/popover/src"],
      "@lidofinance/popup-menu": ["packages/popup-menu/src"],
      "@lidofinance/select": ["packages/select/src"],
      "@lidofinance/service-page": ["packages/service-page/src"],
      "@lidofinance/stack": ["packages/stack/src"],
      "@lidofinance/styled-system": ["packages/styled-system/src"],
      "@lidofinance/table": ["packages/table/src"],
      "@lidofinance/text": ["packages/text/src"],
      "@lidofinance/theme": ["packages/theme/src"],
      "@lidofinance/toast": ["packages/toast/src"],
      "@lidofinance/tooltip": ["packages/tooltip/src"],
      "@lidofinance/transition": ["packages/transition/src"],
      "@lidofinance/utils": ["packages/utils/src"],
      "@lidofinance/cookie-theme-toggler": ["packages/cookie-theme-toggler/src"]
    }
  },
  "files": ["packages/index.ts"],
  "exclude": ["node_modules"]
}
